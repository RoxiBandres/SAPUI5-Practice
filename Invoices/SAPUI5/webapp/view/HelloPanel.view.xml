<mvc:View controllerName="logaligroup.SAPUI5.controller.HelloPanel"
          xmlns="sap.m" 
          xmlns:mvc="sap.ui.core.mvc"
          xmlns:core="sap.ui.core"
          displayBlock="true">
<!--  <Text text="Hello World"></Text> Texto-->
    <Panel headerText="{i18n>panel}" class="sapUiResponsiveMargin" width="auto">
        <content>
            <Button text="{i18n>helloDialogBut}" press=".onOpenDialog" class="sapUiSmallMarginEnd" icon="sap-icon://action"/>
            <Button text="{i18n>showHelloButtonText}" press=".onShowHello" class="sapUiSmallMarginEnd"/>
                <Input value="{/recipient/name}" 
                       width="60%" 
                       valueLiveUpdate="true"/>
                           <Text text="{/recipient/name}" class="sapUiSmallMargin boldElements"/>
        </content>
    </Panel>
    <core:Fragment fragmentName="logaligroup.SAPUI5.view.Form01" type="XML"/>
</mvc:View>